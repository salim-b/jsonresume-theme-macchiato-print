{{#if resume.volunteer.length}}
<div class="container volunteer-container">
    {{> title value="Volunteer"}}

    {{#each resume.volunteer}}
    <section class="item">
        {{> section-header name=this.organization showWebsite=true}}
        {{#if position}}
        <h5>{{{markdownToHtml position}}}</h5>
        {{/if}}

        {{#if summary}}
        <p class="summary">{{{markdownToHtml summary}}}</p>
        {{/if}}

        {{#if highlights.length}}
        <ul>
            {{#each highlights}}
            <li>{{{markdownToHtml .}}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}
