{{#if resume.skills.length}}
    <div class="container skills-container">
        {{> title value="Technologiekenntnisse"}}
        {{#each resume.skills}}
            <section class="container">
                {{#if name}}
                <h4 class="bold">{{{markdownToHtml name}}}</h4>
                {{/if}}
                {{#if level}}
                <h4 class="bold capitalize">{{{markdownToHtml level}}}</h4>
                {{/if}}
                {{#if keywords.length}}
                <ul class="skills">
                  {{#each keywords}}
                  <li class="skill minimal"><span>{{{markdownToHtml .}}}</span></li>
                  {{/each}}
                </ul>
                {{/if}}
            </section>
        {{/each}}
    </div>
{{/if}}
