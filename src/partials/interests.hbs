{{#if resume.interests.length}}
    <div class="container interests-container">
        {{> title value="Interests"}}

        {{#each resume.interests}}
            <section class="item">
                {{#if name}}
                    <h4 class="bold">{{{markdownToHtml name}}}</h4>
                {{/if}}
                {{#if keywords.length}}
                    <ul class="minimal">
                        {{#each keywords}}
                            <li>{{{markdownToHtml .}}}</li>
                        {{/each}}
                    </ul>
                {{/if}}
            </section>
        {{/each}}
    </div>
{{/if}}
