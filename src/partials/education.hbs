{{#if resume.education.length}}
<div class="container education-container">
    {{> title value="Ausbildung"}} {{#each resume.education}}
    <section class="item">
        {{> section-header name=this.institution website=this.url }} {{#if location}}
        <h5 class="location">{{location}}</h5>
        {{/if}}

        <h4>{{#if studyType}}{{studyType}}, {{/if}}{{#if area}}{{area}}{{/if}}</h4>

        {{#if score}}
        <h5>{{score}}</h5>
        {{/if}} {{#if specialization}}
        <h5 class="specialization">{{specialization}}</h5>
        {{/if}} {{#if courses.length}}
        <ul class="two-column">
            {{#each courses}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}
